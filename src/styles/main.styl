@import 'transitions.styl'

*
  font-weight('light')
  margin: 0
  padding: 0
  outline: none
  border: 0
  box-sizing: border-box
  user-select: none

li
  list-style: none
  
label[for]
  cursor: pointer
  
input:focus::-webkit-input-placeholder
  color: transparent
input:focus::input-placeholder
  color: transparent

html
  min-height: 100%
  height: 100%
  
body
  min-height: 100%
  height: 100%
  padding: $page-padding
  font-family: 'Helvetica Neue', 'Roboto', 'Sans serif'
  color: black
  
svg
  pointer-events: none
  
.u-relative
  position: relative
  
.u-user-select
  user-select: auto
  
.u-iblock
  display: inline-block
  
.u-clear
  clear: both
  
.o-clickable
  cursor: pointer
  
.o-btn
  background: transparent
  cursor: pointer
  display: inline-block