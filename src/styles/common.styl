$black = #000000
$dark-grey = #545454
$grey = #AFAFAF

$blue-light = #68D0FF
$blue = #00A2EA

$page-padding = 20px
$header-font-size = 36px
$header-padding-bottom = 15px


$player-btns-margin = 20px
$player-top = 61px

transition-default()
  transition: all .2s ease
  
font-family-default()
  font-family: 'Helvetica Neue', 'Helvetica Neue Light Woff', 'Roboto', 'sans-serif', 'Arial'

font-weight(weight)
  if weight is 'thin'
    font-weight: 100
    font-family: 'Helvetica Neue', 'Helvetica Neue Thin Woff', 'Roboto', 'sans-serif', 'Arial'
  if weight is 'light'
    font-weight: 300
    font-family: 'Helvetica Neue', 'Helvetica Neue Light Woff', 'Roboto', 'sans-serif', 'Arial'
